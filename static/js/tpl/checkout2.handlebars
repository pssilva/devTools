<div id="add-passenger" class="add-passenger default-form">
    <p class="simple-text">Preencha os dados dos passageiros.</p>
    {{#PASSENGERS}}
    <p id="passenger-info-{{@index}}" class="passenger-info">
        <span class="field-holder ajuste-campo">
            <input type="text" name="passenger[{{@index}}][NAME]" id="passenger-name[{{@index}}]" placeholder="Nome" required autocomplete="off" class="onfocus" >
        </span>

        <span class="field-holder ajuste-campo">
            <input type="email" name="passenger[{{@index}}][EMAIL]" id="passenger-email[{{@index}}]" placeholder="E-mail" required autocomplete="off" >
        </span>

        <span class="field-holder tamanho identidade">
            <input type="text" name="passenger[{{@index}}][RG]" id="passenger-rg[{{@index}}]" placeholder="Identidade" required autocomplete="off">
        </span>

        <span class="field-holder tamanho">
            <input type="text" name="passenger[{{@index}}][MOBILE]" id="passenger-mobile[{{@index}}]" class="celular-passageiro" placeholder="Celular" required autocomplete="off">
        </span>

        <span class="field-holder tamanho">
            <input type="text" name="passenger[{{@index}}][BIRTHDATE]" id="passenger-birth[{{@index}}]" class="data datenormal" placeholder="Nascimento" required autocomplete="off">
        </span>
    </p>
    {{/PASSENGERS}}

    {{#PASSENGERS}}
    <p id="passenger-info-children-{{@index}}" class="passenger-info passenger-children">
        <span>Dados passageiro - Criança</span><br>
        <span class="field-holder ajuste-campo">
            <input type="text" name="passenger[{{@index}}][NAME]" id="passenger-name-children[{{@index}}]" placeholder="Nome" required autocomplete="off">
        </span>

        <span class="field-holder ajuste-campo">
            <input type="email" name="passenger[{{@index}}][EMAIL]" id="passenger-email-children[{{@index}}]" placeholder="E-mail" required autocomplete="off" >
        </span>

        <span class="field-holder tamanho">
            <input type="text" name="passenger[{{@index}}][MOBILE]" id="passenger-mobile-children[{{@index}}]" class="celular-passageiro" placeholder="Celular" required autocomplete="off">
        </span>

        <span class="field-holder tamanho">
            <input type="text" name="passenger[{{@index}}][BIRTHDATE]" id="passenger-birth-children[{{@index}}]" class="data datenormal" placeholder="Nascimento" required autocomplete="off">
        </span>
    </p>
    {{/PASSENGERS}}
    
    <p>
        <span class="field-holder field-textarea">
            <textarea type="text" name="passenger-observation" id="passenger-observation" placeholder="Observação" autocomplete="off" ></textarea>
        </span>
    </p>
</div>

<input type="button" name="next" class="next checkout-next" value="Continuar" id="next-step3" />
<input type="button" name="previous" class="previous checkout-back" value="Voltar" id="prev-step1"/>

