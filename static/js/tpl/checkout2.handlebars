<h3 class="block-title">Dados dos Passageiros</h3>
{{#OUTBOUND}}
<div class="card-result card-checkout {{CARD_PROMO}} {{CARD_CIA}} {{CARD_EXPENSIVE}} {{@index}}">
        
    <label for="flight-inbound-{{@index}}" class="cf" >
        
        <div class="card-flight-info card-flight-info-checkout">
            <div class="card-flight-header">
                <div class="card-flight-for">
                    <span>Ida</span><span>Volta</span>
                </div>
                <div class="card-flight-company">
                    <span>N° do Vôo:</span>
                    <span class="card-flight-number">{{FLIGHT_NUMBER}}</span>
                </div>
                <div class="card-flight-duration-area">
                    Duração:
                    <span class="card-flight-duration sort-duration">{{TOTAL_FLIGHT_DURATION}}</span>
                </div>
                <div class="card-flight-type-area tipo">
                    Tipo:
                    <span class="card-flight-type sort-legs">{{ESCALE}}</span>
                </div>

                <div class="card-flight-type-area" style="width:9.5em">
                    Partida:
                    <span class="card-flight-departure-time sort-origin">{{DEPARTURE_TIME}}</span>
                </div>

                <div class="card-flight-type-area" style="width:9.5em">
                    Chegada:
                    <span class="card-flight-arrival-time sort-destination">{{ARRIVAL_END_TIME}}</span>
                </div>
            </div>

        </div>

        <div class="card-flight-prices card-flight-prices-checkout" style="width: 57.399em">
            <table class="card-flight-other-prices-checkout">
                <tr>
                    <td class="card-flight-flyer-program card-compare-checkout">
                        <span class="label">Origem:</span>
                        <span class="value sort-flyer-points">{{DEPARTURE_LOCATION_NAME}}</span>
                    </td>

                    <td class="card-flight-flyer-program card-compare-checkout">
                        <span class="label">Destino:</span>
                        <span class="value sort-flyer-points">{{ARRIVAL_END_LOCATION_NAME}}</span>
                    </td>

                    <td class="card-flight-flyer-program card-compare-checkout">
                        <span class="label">Qtd. Milhas:</span>
                        <span class="value sort-flyer-points">{{PRICE_MILES}}</span>
                    </td>
                </tr>
                
                <!--
                <td class="card-flight-flyer-program card-compare-checkout">
                    <span class="label">Tarifa</span>
                    <span class="value sort-flyer-points">R$ {{PRICE_MILHASFACIL}}</span>
                </td>

                <td class="card-flight-flyer-program card-compare-checkout">
                    <span class="label">Taxa</span>
                    <span class="value sort-flyer-points">R$ {{TAX}}</span>
                </td>
                <td class="card-flight-flyer-program card-compare-checkout total" style="">
                    <span class="label">Total:</span>
                    <span class="value sort-milhas-facil-price">R$ {{PRICE_TOTAL}}</span>
                </td>
                -->
                <div class="clear"></div>
            </table>
        </div>
    </label>
</div>
{{/OUTBOUND}}

