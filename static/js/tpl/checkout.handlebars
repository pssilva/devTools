    {{#if HAS_CCD}}
        {{#CARD_DATA}}
            <div id="resumo-pagamento">
                <h3>Dados de pagamento</h3>
                <h4>Entrada em dinheiro: <span>R$ {{ON_CASH}}</span></h4>
                
                <div id="tabela-resumo-pagamento" class="clearfix">
                    <div class="dado-pagamento left">
                        <p>Restante em:</p>
                        <p>{{CARD_PARCELS}}x R$ {{CARD_PARCELS_VALUE}}</p>
                    </div>
                    <div class="dado-pagamento left">
                        <p>No cartão de Crédito:</p>
                        <p>{{CARD_FLAG}}</p>
                    </div>
                    <div class="dado-pagamento left">
                        <p>Titular:</p>
                        <p>{{CARD_NAME}}</p>
                    </div>
                    <div class="dado-pagamento right" style="width:131px">
                        <p>Nº do cartão:</p>
                        <p>xxxx xxxx xxxx {{CARD_LAST4DIGITS}}</p>
                    </div>
                </div>
            </div>
        {{/CARD_DATA}}
