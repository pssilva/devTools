    <div id="dados-passanger">
        <h4>Passageiros</h4>
        {{#PASSENGERS}}
            <div class="field-passanger">
                <p>Passageiro ADL <a class="edit-dados">Editar <img src="static/img/ico-pen-edit.png" alt=""></a>
                <a class="salve-dados hidden">Salvar <img style="margin-left: 5px" src="static/img/ico-save.png" alt=""></a></p>
                <label for="" class="label-passanger1">
                    <input type="text" placeholder="Nome:" name="passenger_rev[{{@index}}][NAME]" id="passenger-name[{{@index}}]" class="nome" value="{{NAME}}" readonly required>
                </label>
                <label for="" class="label-passanger1">
                    <input type="text" placeholder="E-mail:" name="passenger_rev[{{@index}}][EMAIL]" id="passenger-email[{{@index}}]" class="email" value="{{EMAIL}}" readonly required>
                </label>
                <label for="" class="label-passanger2">
                    <input type="text" placeholder="Identidade:" name="passenger_rev[{{@index}}][RG]" id="passenger-rg[{{@index}}]" class="input-passanger identidade" value="{{RG}}" readonly required> 
                </label>
                <label for="" class="label-passanger2">
                    <input type="text" placeholder="Celular:" name="passenger_rev[{{@index}}][MOBILE]" id="passenger-mobile[{{@index}}]" class="input-passanger celular" value="{{MOBILE}}" readonly required>
                </label>
                <label for="" class="label-passanger2">
                    <input type="text" placeholder="Nascimento:" name="passenger_rev[{{@index}}][BIRTHDATE]" id="passenger-birth[{{@index}}]" class="input-passanger datebirthday nascimento" value="{{BIRTHDATE}}" readonly required>
                </label>
            </div>
        {{/PASSENGERS}}

        {{#PASSENGERS_CHD}}
